{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/index.py"
    },
    {
      "src": "/(.*)",
      "dest": "api/index.py"
    }
  ],
  "env": {
    "OPENROUTER_API_KEY": "@openrouter_api_key",
    "SECRET_KEY": "@secret_key",
    "DATABASE_URL": "@database_url"
  },
  "functions": {
    "api/index.py": {
      "maxDuration": 30
    }
  }
}